
<h1><%= @product.name %></h1>

 <div><%= image_tag  @product.image.url(:large), {:class => 'img-fluid img-thumbnail'}%></div> 

<ul class="list-inline">
  <li class="list-group-item"><%= link_to "Редактировать категорию товара", edit_product_path(@product) %></li>
  <li class="list-group-item"><%= link_to "Удалить категорию товара", product_path(@product),
                  method: :delete,
                  data: { confirm: "Вы уверены?" } %></li>
  <li class="list-group-item"><%= link_to "Назад", root_path %></li>
</ul>

<%= render "products/new" %>